<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRevisao"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <LinearLayout
        android:id="@+id/act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include   android:id="@+id/toolbar" layout="@layout/toolbar" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/revisaoModo1_actRevisao"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_radius"
        android:layout_below="@id/act_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtPalavraInglesActRevisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casa"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtTraduzir_actRevisao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="informe a tradução..."
            android:layout_below="@+id/txtPalavraInglesActRevisao"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:textColorHint="@color/cinza"/>


        <Button
            android:id="@+id/btnVerificarResposat_actRevisao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Verificar reposta"
            android:layout_below="@+id/edtTraduzir_actRevisao"
            android:background="@drawable/button_azul"
            android:padding="1dp"
            android:textColor="@color/branco"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/revisaoModo2_actRevisao"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_radius"
        android:layout_below="@id/act_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtPalavraInglesActRevisaoModo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casa"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/opcoes_one"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/txtPalavraInglesActRevisaoModo2">


            <Button
                android:id="@+id/btnOpcao1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>

            <Button
                android:id="@+id/btnOpcao2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcoes_two"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/opcoes_one">

            <Button
                android:id="@+id/btnOpcao3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>

            <Button
                android:id="@+id/btnOpcao4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/opcoes_two">

            <Button
                android:id="@+id/btnOpcao5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>

            <Button
                android:id="@+id/btnOpcao6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_opt"
                android:text="teste"
                android:textColor="@color/azul_claro"/>
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>