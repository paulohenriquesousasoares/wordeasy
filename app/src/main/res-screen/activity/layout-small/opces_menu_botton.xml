<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="fill_parent"
    android:layout_height="240dp"
    android:background="@color/branco"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"
    android:padding="15dp">


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:text="ESCOLHA UMA DAS AÇÕES"
        android:textColor="@color/cinza"/>

    <TextView
        android:id="@+id/txtEstudarCardPersonalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:textSize="19dp"
        android:text="Estudar card"/>


    <TextView
        android:id="@+id/txtRevisaoCardPersonalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar card personalizado"
        android:layout_below="@+id/txtEstudarCardPersonalizado"
        android:padding="8dp"
        android:textSize="19dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtFechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/azul_claro"
        android:text="FECHAR"
        android:layout_below="@+id/txtRevisaoCardPersonalizado"
        android:layout_marginTop="22dp"
        android:padding="8dp"
        android:textSize="20dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
