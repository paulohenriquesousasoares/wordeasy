<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_detalhes"
        android:background="@color/colorCinzaClaro">

    <!--Toolbar-->
    <LinearLayout
        android:id="@+id/act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include   android:id="@+id/toolbar" layout="@layout/toolbar" />
    </LinearLayout>


    <RelativeLayout
           android:id="@+id/rl_primeiro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/layout_radius"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <RelativeLayout
                android:id="@+id/container_radius_act_detalhes"
                android:layout_width="75dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_red">
                <TextView
                    android:id="@+id/txtletra_act_detalhes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="23dp"
                    android:layout_margin="1dp"
                    android:layout_centerInParent="true"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:text="A"
                    android:transitionName="elemento2"
                    android:textColor="@color/branco" />
            </RelativeLayout>

                <TextView
                    android:id="@+id/txtPalavraEmIngles_detalhes_palavra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ingles"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:transitionName="elemento1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/container_radius_act_detalhes"
                    android:layout_toEndOf="@+id/container_radius_act_detalhes" />

                <TextView
                    android:id="@+id/txtPalavraTraducao_detalhes_palavra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portanto"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/txtPalavraEmIngles_detalhes_palavra"
                    android:layout_toRightOf="@+id/container_radius_act_detalhes"
                    android:layout_toEndOf="@+id/container_radius_act_detalhes" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_segundo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/layout_sem_radius"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/txtPalavraVezesPraticou_detalhes_palavra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Quantidade em que estudou: 0"
            android:layout_centerHorizontal="false"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/layout_sem_radius"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/txtPalavraVezesError_detalhes_palavra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Vezes em que errou: 0"
            android:layout_centerHorizontal="false"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_terceiro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/layout_sem_radius"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/txtPalavraVezesAcertou_detalhes_palavra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Vezes em que acertou: 0"
            android:layout_centerHorizontal="false"
            android:textStyle="bold"/>
    </RelativeLayout>



</LinearLayout>